[user]
  name = Denat Hoxha
  email = denat3@gmail.com
[pull]
  rebase = true
[alias]
  rh = reset --hard HEAD
  co = checkout
  cp = cherry-pick
  amend = commit -a --amend --no-edit
  unstage = reset --soft HEAD
  cdiff = "!git diff $1 $1^"
  br = branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' --sort=-committerdate
[push]
  default = current
  autoSetupRemote = true
[core]
  excludesfile = /Users/denathoxha/.gitignore_global
[init]
  defaultBranch = main
